<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/titleTv"
        android:text="备忘录："
        android:layout_margin="12dp"
        style="@style/s18_cff5c19"/>
    <TextView
        android:id="@+id/noteTitleTv"
        style="@style/s18_c333"
        android:layout_margin="12dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/titleTv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="note title" />

    <TextView
        android:id="@+id/noteDateTv"
        style="@style/s12_c333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="18dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/noteTitleTv"
        app:layout_constraintStart_toEndOf="@+id/noteTitleTv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2021-12-2" />

    <TextView
        android:id="@+id/noteContentTv"
        style="@style/s16_c333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="start"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noteTitleTv"
        tools:text="noteContent" />
</androidx.constraintlayout.widget.ConstraintLayout>