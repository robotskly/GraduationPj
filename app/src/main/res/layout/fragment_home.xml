<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/buttonPanelGl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:columnCount="4"
        android:rowCount="2"
        app:layout_constraintBottom_toTopOf="@+id/mMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/navigationIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:background="@drawable/shape_sf0f2f5_c8"
            android:padding="30dp"
            android:src="@drawable/icon_option_train_test" />

        <ImageView
            android:id="@+id/noteIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:background="@drawable/shape_sf0f2f5_c8"
            android:padding="30dp"
            android:src="@drawable/icon_option_train_test" />

        <ImageView
            android:id="@+id/serviceIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:background="@drawable/shape_sf0f2f5_c8"
            android:padding="30dp"
            android:src="@drawable/icon_option_train_test" />

        <ImageView
            android:id="@+id/mediaIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:background="@drawable/shape_sf0f2f5_c8"
            android:padding="30dp"
            android:src="@drawable/icon_option_train_test" />

        <ImageView
            android:id="@+id/userCenterIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:background="@drawable/shape_sf0f2f5_c8"
            android:padding="30dp"
            android:src="@drawable/icon_option_train_test" />

        <ImageView
            android:id="@+id/communicationIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:background="@drawable/shape_sf0f2f5_c8"
            android:padding="30dp"
            android:src="@drawable/icon_option_train_test" />

    </GridLayout>

    <com.example.graduationpj.support.widget.btmmenu.MenuM
        android:id="@+id/mMenu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:backColor="@color/color_f1f2f4"
        app:count="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>